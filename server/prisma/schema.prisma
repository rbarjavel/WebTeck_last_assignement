datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  group     Group[]
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Group {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String
  notes     Note[]
  updatedAt DateTime @updatedAt
  users     User[]
}

model Note {
  createdAt DateTime          @default(now())
  desc      String
  dueDate   DateTime?
  group     Group?            @relation(fields: [groupId], references: [id])
  groupId   String?
  id        String            @id @default(cuid())
  serverity EnumNoteServerity
  status    EnumNoteStatus
  title     String
  updatedAt DateTime          @updatedAt
}

enum EnumNoteServerity {
  Low
  Medium
  High
}

enum EnumNoteStatus {
  ToDo
  InProgress
  Done
}